<h1>Books</h1>



<table>

  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <% @books.each do |book| %>
  <tr>
    <th><%= book.title %></th>
    <th><%= book.body %></th>
    <th>show</th>
    <th>edit</th>
    <th>destroy</th>
  </tr>
  <% end %>
</table>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :Title %>
	
  <h4>本文</h4>
  <%= f.text_area :Body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
